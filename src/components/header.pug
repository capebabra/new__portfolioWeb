mixin header
    header.header#header
        .header__container 
            .container-logo
                a(href="#header")
                    img.logo(src="@img/logo.png", alt="logo", draggable="false")
            .container-navigation
                a.navigation-elementH(href="#aboutMe") About me
                a.navigation-elementH(href="#skills") Skills
                a.navigation-elementH(href="#hobbies") Hobby
                .navigation-select
                    .selected-element#languageSelected
                        img.selectedImg#selectedImg(src="", alt="usa" draggable="false")   
                        p.selectedText#selectedText EN
                    .select-choseElement#languageSwitcher
                        .select-element
                            ul.navigation__selectContent#en
                                li 
                                    img.selectImg(src="@img/usa.png", alt="usa" draggable="false")
                                li
                                    p.selectText EN
                            ul.navigation__selectContent#ru
                                li 
                                    img.selectImg(src="@img/russia.png", alt="usa" draggable="false")
                                li
                                    p.selectText RU